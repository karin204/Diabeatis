<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karin.diabeatis.UI.HistoryDisplay">

    <TextView
        android:id="@+id/txtNameE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEnter"
        android:layout_marginRight="24dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/txtChoose"
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textDirection="rtl"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="31dp"
        android:text="שלום "
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textDirection="rtl"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtChoose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="הכנס את תוצאות הבדיקה האחרונה"
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textDirection="rtl"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/graph"
        android:layout_alignEnd="@+id/txtChoose"
        android:layout_marginBottom="19dp"
        android:background="@android:color/transparent"
        android:text="הוסף בדיקה"
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textDirection="rtl"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@android:color/transparent"
        android:text="הצג הסטורית בדיקות"
        android:textColor="@color/colorPrimaryDark"
        android:textCursorDrawable="@color/common_google_signin_btn_text_dark_focused"
        android:textDirection="rtl"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEnter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:hapticFeedbackEnabled="true"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

</RelativeLayout>
