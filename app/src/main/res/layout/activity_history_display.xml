<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karin.diabeatis.UI.HistoryDisplay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txtChoose"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/txtNameE"
        android:textSize="30sp"
        android:layout_alignTop="@+id/txtChoose" />

    <TextView
        android:text="הכנס את תוצאות הבדיקה האחרונה"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/txtEnter"
        android:textSize="14sp"
        android:layout_below="@+id/txtChoose"
        android:layout_centerHorizontal="true" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="שלום "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/txtChoose"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="חשב בדיקות אחרונות"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShow"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/check"
        android:layout_toLeftOf="@+id/txtChoose"
        android:layout_toStartOf="@+id/txtChoose" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/check"
        android:hapticFeedbackEnabled="true"
        android:gravity="fill_horizontal"
        android:textAlignment="center"
        android:layout_below="@+id/txtEnter"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
